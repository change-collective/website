---
export interface Props {
	sections: {
		subtitle: string
		listItem: {
			title: string
			description: string
		}[]
	}[]
}

const { sections } = Astro.props as Props
---

<div class="flex flex-col gap-12" id="manifest">
	{
		sections.map((section) => {
			return (
				<div class="flex flex-col items-start gap-8 md:flex-row">
					<h2 class="sticky top-0 basis-1/2 text-[48px] leading-tight">
						{section.subtitle}
					</h2>
					<ol class="flex basis-1/2 flex-col gap-8">
						{section.listItem.map((item) => {
							return (
								<li class="flex items-start gap-2">
									<div>
										<h3 class="text-[30px] leading-tight">
											{item.title}
										</h3>
										<p class="text-[20px]">
											{item.description}
										</p>
									</div>
								</li>
							)
						})}
					</ol>
				</div>
			)
		})
	}
</div>

<style is:global>
	#manifest {
		counter-reset: muffins;
	}
	ol li {
		counter-increment: muffins;
	}

	ol li:before {
		content: counter(muffins) ". ";
		font-weight: bold;
		opacity: 0.5;
	}

	ol {
		font-size: 30px;
		line-height: 1.25;
		list-style: none;
	}
</style>
